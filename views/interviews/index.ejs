<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/interviews.css" />
  <title>Interviews</title>
</head>
<body>
<header>
  <%- include('../partials/_navbar.ejs') %>
</header>

<div class="container">
  <main class="main-column">
    <div class="interview-box">
    <h2>Role & Company</h2>
    <% if (applications.length >0) { %>
    <ul type="none">
      <% applications.forEach((application)=>{ %>
          <li><%= application.title %> at <%= application.company %></li>
        <% }) %>
  </ul>
  <% } else {%>
    <p>no interviews</p>
  <% } %>
  </div>

  <div class="interview-box">
    <h2>Status</h2>
    <% if (applications.length >0) { %>
      <ul type="none">
        <% applications.forEach((application)=>{ %>
            <li><%= application.status %> </li>
          <% }) %>
    </ul>
    <% } else {%>
      <p>no status</p>
    <% } %>
  </div>

  <div class="interview-box">
    <h2>Date & Time of Interview</h2>
    <% if (applications.length >0) { %>
      <ul type="none">
        <% applications.forEach((application)=>{ %>
            <li><%= application.interviewDate %> </li>
          <% }) %>
    </ul>
    <% } else {%>
      <p>no notes</p>
    <% } %>
  </div>

  <div class="interview-box">
    <h2>Notes</h2>
    <% if (applications.length >0) { %>
      <ul type="none">
        <% applications.forEach((application)=>{ %>
            <li><%= application.notes %> </li>
          <% }) %>
    </ul>
    <% } else {%>
      <p>no notes</p>
    <% } %>
  </div>

  <a class="add-todo" href="/add-todo">Add a Todo</a>
  </main>

  <div class="right-sidebar">
      <div class="container">
        <div class="to-do app">
            <h2>Tasks</h2>
            <ul>
              <% todos.forEach(todo => { %>
                <li style="text-decoration: <%= todo.completed ? 'line-through' : 'none' %>">
                  <%= todo.name %> 

                  <form action="/todos/<%= todo._id %>?_method=PUT" method="POST">
                    <input type="checkbox" name="completed" <%= todo.completed ? 'checked' : '' %> onclick='this.form.submit()'>
                </form>
                    <form action="/todos/<%=todo._id %>?_method=Delete" method="POST">
                        <button type="submit" onclick="return confirm('want to delete this?')">Delete</button>
                    </form>
                </li>
            <%}); %>
            </ul>
            </div>
            </div>
    </div>
</body>
</html>