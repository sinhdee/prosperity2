<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/interviews.css" />
  <title>Interviews</title>
</head>
<body>
<header>
  <%- include('../partials/_navbar.ejs') %>
</header>

<div class="container">
  <main class="main-column">
    <h2>Role & Company</h2>
    <div class="interview-box">
    <% if (applications.length >0) { %>
    <ul>
      <% applications.forEach((application)=>{ %>
          <li><%= application.title %> at <%= application.company %></li>
        <% }) %>
  </ul>
  <% } else {%>
    <p>no interviews</p>
  <% } %>
  </div>
  <div class="interview-box">
    <h2>Status</h2>
    <% if (applications.length >0) { %>
      <ul>
        <% applications.forEach((application)=>{ %>
            <li><%= application.status %> </li>
          <% }) %>
    </ul>
    <% } else {%>
      <p>no status</p>
    <% } %>
  <div class="interview-box">
    <h2>Date & Time of Interview</h2>
    <% if (applications.length >0) { %>
      <ul>
        <% applications.forEach((application)=>{ %>
            <li><%= application.interviewDate %> </li>
          <% }) %>
    </ul>
    <% } else {%>
      <p>no notes</p>
    <% } %>
  </div>
  <div class="interview-box">
    <h2>Notes</h2>
    <% if (applications.length >0) { %>
      <ul>
        <% applications.forEach((application)=>{ %>
            <li><%= application.notes %> </li>
          <% }) %>
    </ul>
    <% } else {%>
      <p>no notes</p>
    <% } %>
  </div>
  </main>
  <a class="add-todo" href="/add-todo"
  >Add a Todo</a>
  <div class="right-sidebar">
      <div class="container">
        <div class="to-do app">
            <h2>To-Do List</h2>
            <ul>
                <% todos.forEach(todo => { %>
                <li>
                    <%= todo.name %> 
                    <%= todo.completed ? 'Y' : 'N' %>
                </li>
            <%}); %>
            </ul>
    </div>
</body>
</html>